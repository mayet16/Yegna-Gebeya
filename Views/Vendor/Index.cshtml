@model IEnumerable<YegnaGebiyaSystem.Models.Seller>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Vendor List";
}
<div class="card-deck">
    @foreach (var vendor in Model)
    {
        var image = "~/images/" + (vendor.Users.Image ?? "logo.jpg");

        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@vendor.Users.Name</h3>
                <h3>@vendor.Address</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@image" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Vendor" asp-action="details" asp-route-id="@vendor.Seller_ID" class="btn btn-primary">View Details</a>
            </div>
        </div>

    }

</div>

