@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
    var PhotoPath = "~/images/try.jpg";
}

<link href="~/css/Registration.css" rel="stylesheet" />
<h5>User Registration</h5>
<h4 style="color:red">@ViewBag.ErrorMessage</h4>
<div class="register">
    <div asp-validation-summary="All" style="color:red">

    </div>
    <form enctype="multipart/form-data" method="post" asp-action="Register" asp-controller="Account" id="register">

            <input asp-for="Photo" value="@PhotoPath" hidden/>

        <div class="userinput">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="inputfield" required id="name" />

        </div>
        <div class="userinput">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="inputfield" required id="email" />

        </div>

        <div class="userinput">
            <label asp-for="Sex"></label>
            <select asp-for="Sex" class="inputfield" id="sex">
                <option value="Male" style="background:#ffd800"> Male</option>
                <option value="Female"> Female</option>
            </select>
        </div>


        <div class="userinput">

            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" required class="inputfield" onkeypress="onlynum(event)" id="PhoneNumber" />
        </div>
        <div class="userinput">
            <label asp-for="Address"></label>
            <input asp-for="Address" required class="inputfield" id="Address" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="userinput">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" required class="inputfield" id="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>


        <div class="userinput">
            <label asp-for="Password"></label>
            <input asp-for="Password" required class="inputfield" id="Password" />
            <span asp-validation-for="Password"></span>

        </div>
        <div class="userinput">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" required class="inputfield" id="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>

        </div>
        <button type="submit" id="sub">Register</button>
        <button type="reset" id="sub">Cancel</button>
    </form>
</div>
<script>
    function onlynum(evt) {
        var ch = String.fromCharCode(evt.which);
        if (!(/[0-9]/.test(ch)) && !(/[+]/.test(ch))) {
        evt.preventDefault();
    }

}
</script>