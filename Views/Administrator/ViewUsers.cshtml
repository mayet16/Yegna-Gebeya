@model IEnumerable<User>
@{
        Layout = "_LayoutOfAdmin";
    ViewData["Title"] = "View users";
}
    <div class="container">
        <h1 class="text-center">All Users</h1>

        @if (Model.Any())
        {
            foreach (var user in Model)
            {
                var photoPath = "~/images/" + (user.Image ?? "try.jpg");
                <div class="card mb-3" style="height:auto; width:680px">
                    <div class="card-header">
                        <h5 class="card-title">@user.UserName</h5>
                    </div>
                    <div class="card-body">
                        <img class="imageThumbnail card-img-top" src="@photoPath" asp-append-version="true" />
                        <h4>User ID : @user.Id</h4>
                        <h4>Full name : @user.Name</h4>
                        <h4>User name : @user.UserName</h4>
                        <h4>Email : @user.Email</h4>
                        <h4>Role : User</h4>
                    </div>
                    <div class="card-footer text-center">
                        @*<form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">*@
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit user</a>
                        @*<span id="confirmDeleteSpan_@user.Id" style="display:none">
                            <span>Are you sure you want to delete?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a class="btn btn-primary text-white" onclick="confirmDelete('@user.Id', false)">No</a>
                        </span>

                        <span id="deleteSpan_@user.Id">
                            <a class="btn btn-danger text-white" onclick="confirmDelete('@user.Id', true);">Delete</a>
                        </span>*@
                        <a asp-action="Profile" class="btn btn-primary">Back</a>
                        @*</form>*@
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card bo" style="margin-top: 30%; margin-left: 40%;">
                <div class="card-header">
                    <h1>NO USER CREATED YET!!!</h1>
                </div>
            </div>
        }
        @section Scripts {
            <script src="~/js/CustomScript.js"></script>

        }
    </div>