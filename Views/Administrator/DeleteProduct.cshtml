@model ProductDisplayViewModel

@{
    ViewBag.Title = "Delete Product";
        Layout = "_LayoutOfAdmin";
}

    <div class="container">
        <h1>Delete Product</h1>

        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="ID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ID" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Full Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <span id="confirmDeleteSpan_@Model.ID" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a class="btn btn-primary text-white" onclick="confirmDelete('@Model.ID', false)">No</a>
                    </span>

                    <span id="deleteSpan_@Model.ID">
                        <a class="btn btn-danger text-white" onclick="confirmDelete('@Model.ID', true);">Delete</a>
                    </span>
                    <a asp-action="ViewProduct" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>