@model AdministratorProfileViewModel
@{
        Layout = "_LayoutOfAdmin";
    ViewData["Title"] = "Profile";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "try.jpg");
}

    <div class="container">
        <div class="card mb-3" style="height:auto; width:680px">
            <div class="card-header">
                <h1 class="text-center">@Model.User.UserName</h1>
            </div>

            <div class="card-body text-center">
                <img class="imageThumbnail card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>User ID : @Model.User.Id</h4>
                <h4>Full name : @Model.User.Name</h4>
                <h4>User name :@Model.User.UserName</h4>
                <h4>Email : @Model.User.Email</h4>
                <h4>Role : Admin</h4>

            </div>
            <div class="card-footer text-center">
                @*<a asp-action="index" asp-controller="Home" class="btn btn-primary">Back</a>*@
                <a asp-action="EditProfile" asp-controller="Administrator" asp-route-id="@Model.User.Id" class="btn btn-primary">Edit Profile</a>
                <a asp-action="ChangePassword" asp-controller="Administrator" asp-route-id="@Model.User.Id" class="btn btn-primary">Change Password</a>
            </div>
        </div>
    </div>