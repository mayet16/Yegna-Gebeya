@model FeedbackViewModel
@{
        Layout = "_LayoutOfAdmin";
    ViewBag.Title = "Replay";
}

    <div class="container">
        <div class="card-body" style="margin-top:30%; margin-left:30%">
            <div class="media">
                <img class="d-flex rounded-circle avatar z-depth-1-half mr-3" src="~/images/try.jpg" alt="User">
                <h5 class="mt-0 font-weight-bold blue-text">@User.Identity.Name</h5>
                <div class="media-body">
                    <form method="post" class="mt-3">
                        <div class="form-group row">
                            <label hidden asp-for="ID" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input hidden asp-for="ID" disabled class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label hidden asp-for="Replay" class="col-sm-2 col-form-label">@User.Identity.Name</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Replay" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Replay</button>
                                <a asp-action="feedback" class="btn btn-primary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>