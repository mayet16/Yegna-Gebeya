@model AdministratorAdminEditViewModel

@{
        Layout = "_LayoutOfAdmin";
    ViewBag.Title = "Edit User";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "try.jpg");
}

    <div class="container">
        <h1>Edit User</h1>

        <form method="post" class="mt-3">

            <div class="form-group row col-sm-4 offset-4">
                <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
            </div>
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="name" class="col-sm-2 col-form-label">Full Name</label>
                <div class="col-sm-10">
                    <input asp-for="name" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UserName" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="State" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="State">
                        <option value="Active" selected>Active</option>
                        <option value="Deactive">Deactive</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ViewUsers" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
